/**
 * A 16-bit counter with load and reset control bits.
 * if      (reset[t] == 1) out[t+1] = 0
 * else if (load[t] == 1)  out[t+1] = in[t]
 * else if (inc[t] == 1)   out[t+1] = out[t] + 1  (integer addition)
 * else                    out[t+1] = out[t]
 */

CHIP PC {
    IN in[16],load,inc,reset;
    OUT out[16];

    PARTS:
    // Put your code here:
    Inc16(in=tempout,out=plusone);
    Mux16(a=tempout,b=plusone,sel=inc,out=incout);
    Mux16(a=incout,b=in,sel=load,out=jumpout);
    Mux16(a=jumpout,b=false,sel=reset,out=resetout);
    Or(a=load, b=reset, out=loadorreset);
    Or(a=loadorreset, b=inc, out=work);
    Register(in=resetout,load=work,out=tempout);
    And16(a=tempout,b=tempout,out=out);
}
